!    Definitions for Relaxation term filtering

      real rtfx(lx1,ly1,lz1,lelt)
      real rtfy(lx1,ly1,lz1,lelt)
      real rtfz(lx1,ly1,lz1,lelt)

      real rt_kai,rt_wght
      integer rt_kut

      logical rt_ifboyd

      common /RTFILrv/ rtfx, rtfy, rtfz

      common /RTFILr/  rt_kai, rt_wght

      common /RTFILi/  rt_kut

      common /RTFILl/  rt_ifboyd

